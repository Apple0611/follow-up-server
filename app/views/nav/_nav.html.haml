.nav-box.wrap
  .ui.page.grid
    .sixteen.wide.column
      .ui.large.breadcrumb
        = link_to '首页', root_path, class: 'section'
        %i.right.chevron.icon.divider
        - case controller.controller_name
        - when 'categories'
          - if action_name == 'index'
            .active.section 全部分类
          - else
            = render partial: 'nav/ancestors'
            %i.right.chevron.icon.divider
            .active.section
              = @category.name
        - when 'departments'
          - case action_name
          - when 'new'
            = render partial: 'nav/ancestors'
            %i.right.chevron.icon.divider
            .active.section
              = @category.name
          - else
            = render partial: 'nav/ancestors'
            %i.right.chevron.icon.divider
            .active.section
              = @department.name
        - when 'diseases'
          = render partial: 'nav/ancestors'
          %i.right.chevron.icon.divider
          = link_to @department.name, department_path(@department), class: "section"
          %i.right.chevron.icon.divider
          .active.section
            = @disease.name
