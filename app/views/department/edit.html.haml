= render "layouts/header"
= render "nav/nav"
.intro-box.wrap
  .ui.page.grid
    .sixteen.wide.column
      .float-left.column
        %h2.ui.header.title 
          %i.small.edit.icon 
          编辑科室：#{@department[:name]}
      .float-right.column
        = link_to edit_department_path(@department), class: 'ui primary small button' do
          %i.save.icon
          保存
        #department_delete.ui.red.small.button
          %i.trash.icon
          删除
        = link_to department_path(@department), class: 'ui small button' do
          取消
      .clear-both
      .description
        = @department[:description]
      .ui.tabular.menu
        %a.active.item{"data-tab" => "basic"} 基本资料
        %a.item{"data-tab" => "doctor"} 医生管理
      .ui.active.tab{"data-tab" => "basic"}
        = render "department/form_basic"
      .ui.tab{"data-tab" => "doctor"}
        = render "department/form_doctor"
= render "department/modal_delete"
= render "layouts/footer"