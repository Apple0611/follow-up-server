.form-area
  .ui.hidden.warning.message
    %i.close.icon
    Error Message
  .field
    .ui.large.icon.input
      %input{placeholder:"邮箱或电话号码", type: "text"}
      %i.circular.mail.icon
  .field
    .ui.large.icon.input
      %input{placeholder: "密码", type:"password"}
      %i.circular.lock.icon
  - case action_name
  - when "signin"
    .two.fields
      .inline.field
        .ui.checkbox
          %input{type: "checkbox", checked: "checked"}
            %label 保持登录状态
      .inline.field
        %a.float-right{href: "signup"}
          忘记密码
    .ui.large.fluid.primary.submit.button 登录
  - when "new"
    .inline.field
      .ui.checkbox
        %input{type: "checkbox", checked: "checked"}
          %label 我已阅读并同意服务条款
    .ui.large.fluid.positive.submit.button 注册