.sign-box.wrap
  .ui.page.grid
    .eight.wide.centered.column
      .ui.warning.form.segment
        .ui.center.aligned.page.grid
          .row
            - case action_name
            - when "signin"
              .ui.buttons
                .ui.primary.button 登录
                .or
                %a{href: "/signup"}
                  .ui.button 注册
            - when "new"
              .ui.buttons
                %a{href: "/signin"}
                  .ui.button 登录
                .or
                .ui.positive.button 注册
        - if action_name == "signin"
          .ui.fluid.two.item.secondary.pointing.menu
            %a.item{"data-tab" => "first"}
              %span.sign-guide 快速登录
            %a.active.item{"data-tab" => "second"}
              %span.sign-guide 账号密码登录
          .ui.tab{"data-tab" => "first"}
            = render "form_qr"
          .ui.active.tab{"data-tab" => "second"}
            = render "form_input"
        - else
          = render "form_input"
        .ui.horizontal.divider
          %span.sign-guide 或通过以下方式直接登录
        .ui.center.aligned.page.grid
          .media-login.row
            .ui.large.circular.wechat.icon.button
              %i.wechat.icon
            .ui.large.circular.qq.icon.button
              %i.qq.icon
            .ui.large.circular.weibo.icon.button
              %i.weibo.icon