.header-top-banner
  .ui.page.grid
    .sixteen.wide.column
      .ui.secondary.menu
        %a.active.item{href: "/"}
          %i.home.icon
          = t '.home_link'
        - unless defined? hide_search
          .item
            .ui.icon.input
              %input{placeholder: t('.search_link'), type: "text"}
              %i.search.link.icon
        .right.menu
          - if session[:user_id]
            %a.item
              %i.mail.icon
              = t '.message_link'
              .floating.ui.teal.circular.label
                5
            .ui.floating.top.right.pointing.dropdown.link.item
              %i.user.icon
              = t '.personal_link'
              .menu
                .item
                  %i.home.icon
                  个人主页
                %a.item{href: "/settings"}
                  %i.setting.icon
                  设置
                = link_to signout_path, class: 'item' do
                  %i.sign.out.icon
                  退出
          - else
            = link_to signin_path, class: 'item' do
              %i.sign.in.icon
              登录
            = link_to signup_path, class: 'item' do
              %i.add.user.icon
              注册
